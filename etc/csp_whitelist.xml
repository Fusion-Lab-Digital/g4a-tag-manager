<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="google_services" type="host">*.googleadservices.com</value>
                <value id="google-analytics" type="host">*.google-analytics.com</value>
                <value id="doubleclick" type="host">*.doubleclick.net</value>
                <value id="google-tagmanager" type="host">*.googletagmanager.com</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="google_services" type="host">*.googleadservices.com</value>
                <value id="google-analytics" type="host">*.google-analytics.com</value>
                <value id="google-tagmanager" type="host">*.googletagmanager.com</value>
                <value id="doubleclick" type="host">*.doubleclick.net</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="google-analytics" type="host">*.google-analytics.com</value>
                <value id="google-syndication" type="host">*.googlesyndication.com</value>
                <value id="google" type="host">*.google.com</value>
                <value id="doubleclick" type="host">*.doubleclick.net</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="google" type="host">*.google.com</value>
                <value id="doubleclick" type="host">*.doubleclick.net</value>
                <value id="googletagmanager" type="host">*.googletagmanager.com</value>
                <value id="g-static" type="host">*.gstatic.com</value>
            </values>
        </policy>
        <policy id="style-src">
            <values>
                <value id="www_googletagmanager_com" type="host">*.googletagmanager.com</value>
                <value id="doubleclick" type="host">*.doubleclick.net</value>
            </values>
        </policy>
        <policy id="font-src">
            <values>
                <value id="g-static" type="host">*.gstatic.com</value>
                <value id="doubleclick" type="host">*.doubleclick.net</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
